@model IEnumerable<Category>
@{
	ViewData["Title"] = "Index";
}

<!-- Add Heading and link to add new category-->
<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Category List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary" >
				<i class="bi bi-plus-circle"></i> &nbsp; Create a New Category
			</a>
		</div>
	</div>
	<br />
	<table class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>Category Name</th>

				<th>Display Order</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model)
			{
				<tr>
					<td width="50%">
						@obj.Name
					</td>
					<td width="30%">
						@obj.DisplayOrder
					</td>
					<td width="30%">
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"style="display:inline-flex" >
								<i class="bi bi-pencil-square" style="padding-right:5px"></i>
								Edit	
							</a>
							<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2" style="display:inline-flex">
								<i class="bi bi-trash-fill" style="padding-right:5px"></i>
								Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>